<?xml version="1.0" encoding="utf-8"?>
<!--main.xml-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    >
    <TextView
    	    android:text="Bus Routes"
    	    android:textColor="#ffffff"
    	    android:gravity="center_vertical|center_horizontal"
    	    android:textSize="26dip"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:textStyle="bold"
    	    android:background="#000000"
    	    android:layout_marginBottom="5dip"
    	    android:typeface="sans"/>
    <RelativeLayout android:id="@+id/rl_country_heading"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#555555">

		<TextView
		    android:id="@+id/tv_11"
		    android:layout_width="70dip"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:text="Bus"
		    android:textColor="#FFFFFF"
		    android:textSize="18dip"
		    android:textStyle="normal|bold" >

		</TextView>

		<TextView
		    android:id="@+id/TextView01"
		    android:layout_width="80dip"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="36dp"
		    android:layout_toRightOf="@+id/tv_11"
		    android:gravity="center"
		    android:text="From"
		    android:textColor="#FFFFFF"
		    android:textSize="18dip"
		    android:textStyle="normal|bold" />

		<TextView
		    android:id="@+id/tv_12"
		    android:layout_width="80dip"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginRight="18dp"
		    android:gravity="center"
		    android:text="To"
		    android:textColor="#FFFFFF"
		    android:textSize="18dip"
		    android:textStyle="normal|bold" />

	</RelativeLayout>

	<LinearLayout
	    android:id="@+id/ll_country"
	    android:layout_width="fill_parent"
	    android:layout_height="302dp" >

		<ScrollView
		    android:id="@+id/ScrollView11"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:fillViewport="true" >

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="336dp"
			    android:layout_margin="5dip"
			    android:orientation="horizontal" >

			    <TableLayout
			        xmlns:android="http://schemas.android.com/apk/res/android"
			        android:id="@+id/bus_table"
			        android:layout_width="fill_parent"
			        android:layout_height="294dp"
			        android:layout_weight="1"
			        android:stretchColumns="0,1" >
			    </TableLayout>
			</LinearLayout>

		</ScrollView>
	</LinearLayout>

	<TableLayout
	    android:id="@+id/tableLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >

		<TableRow
		    android:id="@+id/tableRow5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="TextViewhi" android:textColor="#000000"/>

			<Button
			    android:id="@+id/getMap"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Get Map.." />

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Text" android:textColor="#000000"/>

			<Button
			    android:id="@+id/button2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Go Back" />

		</TableRow>

	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    </TableRow>
	</TableLayout>

</LinearLayout>

